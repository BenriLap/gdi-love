{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-m64",
                "-mwindows",
                "${workspaceFolder}\\Source\\*.c",
                "-o",
                "${workspaceFolder}\\Build\\GDILove.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}